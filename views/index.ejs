  <div class="container">
    <h1>Welcome, <%= username %> ðŸ‘‹</h1>
    <h2>Stock Search & Graph Viewer</h2>

    <div class="search-bar">
      <input id="stockSymbol" placeholder="Enter Stock Symbol (e.g., AAPL)" type="text">
      <button onclick="searchStock()">Search</button>
